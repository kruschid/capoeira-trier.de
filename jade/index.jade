    script
      :coffee
        google.maps.event.addDomListener window, 'load', ->
          pos = new google.maps.LatLng(49.742510, 6.689411)
          map = new google.maps.Map document.getElementById('locationmap'),
            zoom: 17
            center: pos
            scrollwheel: false
          marker = new google.maps.Marker
            position: pos
            map: map
            title: 'test'
          infoWindow = new google.maps.InfoWindow
            content: '<h4>Halle 4 - uniSPORT Trier</h4>
                      <ol>
                        <li>Fahrzeug am gegenüberliegenden Parkplatz abstellen,</li>
                        <li>den Haupteingang nehmen,</li>
                        <li>durch die Umkleidekabinen gehen,</li>
                        <li>links an den Schlie&szlig;fächern vorbei und</li>
                        <li>am Ende schräg-rechts zur großen Glastür laufen. Willkommen!</li>
                      </ol>'
          infoWindow.open(map,marker)
          google.maps.event.addListener marker, 'click', ->
            infoWindow.open(map,marker)
