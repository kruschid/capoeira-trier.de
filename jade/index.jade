        #mediacarousel.carousel.slide(data-ride='carousel')
          ol.carousel-indicators
            - var images = ['001.jpg', '002.jpg', '003.jpg', '004.jpg', '005.jpg', '006.jpg', '007.jpg', '008.jpg', '009.jpg', '010.jpg',]
            each image, index in images
              if index == 0
                li.active(data-target='#mediacarousel', data-slide-to=index)
              else
                li(data-target='#mediacarousel', data-slide-to=index)
          .carousel-inner
            each image, index in images
              if index == 0
                .item.active: img(src="img/#{image}", alt='...')
              else
                .item: img(src='img/#{image}', alt='...')
          a.left.carousel-control(href='#mediacarousel', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#mediacarousel', role='button', data-slide='next')
